<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressBar"
        android:elevation="2dp"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".MenuActivity">
        <!--android:background="@"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageButton
                android:id="@+id/back_butt"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:background="#00ffffff"
                android:contentDescription="TODO"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backbut" />

            <ImageButton
                android:id="@+id/save_butt"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/back_butt"
                android:layout_marginEnd="12dp"
                android:adjustViewBounds="true"
                android:background="#00ffffff"
                android:contentDescription="TODO"
                android:cropToPadding="false"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/save" />

            <ImageButton
                android:id="@+id/rotate_butt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/save_butt"
                android:layout_centerHorizontal="true"
                android:background="#00ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/rotate" />


        </RelativeLayout>


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/overlapimageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.1">

            <SeekBar
                android:id="@+id/Seekbar"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:max="255"
                android:progress="255" />

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <!--Origin Butt-->
                <ImageButton
                android:id="@+id/origin_butt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                    android:src="@drawable/origin"
                    android:background="#00ffffff"
                    android:padding="2dp"
                android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/button0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:src="@drawable/thum0"
                    android:padding="2dp"
                    android:scaleType="centerInside" />


                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:src="@drawable/thum1"
                    android:padding="2dp"
                    android:scaleType="centerInside" />
                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/thum2"
                    android:padding="2dp"/>
                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/thum3"/>

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:src="@drawable/thum4"
                    android:padding="2dp"
                    android:scaleType="fitCenter" />
                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/thum5"/>
                <ImageButton
                    android:id="@+id/button6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/thum6"/>
                <ImageButton
                    android:id="@+id/button7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/thum7"/>
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
</RelativeLayout>
